{
  "version": "2.5.0",
  "security": {
    "enabled": true,
    "strictMode": true,
    "auditLogging": true
  },
  "dangerousCommands": [
    "rm -rf",
    "rm -r",
    "sudo rm",
    "dd if=",
    "mkfs",
    "fdisk",
    "parted",
    ">/dev/",
    "curl.*|.*sh",
    "wget.*|.*sh",
    "eval",
    "exec",
    "source /dev/",
    "chmod 777",
    "chown -R",
    "find.*-delete",
    "shred",
    "wipe"
  ],
  "dangerousPatterns": [
    ".*\\|\\s*sh\\s*$",
    ".*\\|\\s*bash\\s*$",
    ".*>\\s*/dev/.*",
    ".*rm\\s+-[rf]+.*",
    ".*sudo\\s+rm.*",
    ".*find.*-exec.*rm.*",
    ".*xargs.*rm.*"
  ],
  "protectedPaths": [
    "/System/",
    "/usr/bin/",
    "/usr/sbin/",
    "/bin/",
    "/sbin/",
    "/etc/",
    "/var/log/",
    "/Library/",
    "/Applications/",
    "~/.ssh/",
    "~/.aws/",
    "~/.config/",
    "/dev/"
  ],
  "allowedOperations": [
    "read",
    "write",
    "create",
    "mkdir",
    "touch",
    "cp",
    "mv",
    "ls",
    "cat",
    "grep",
    "find",
    "git",
    "npm",
    "yarn",
    "pnpm",
    "bun",
    "python",
    "node",
    "code",
    "vim",
    "nano"
  ],
  "validation": {
    "maxPathLength": 260,
    "maxFileSize": "10MB",
    "allowedFileTypes": [
      ".md",
      ".txt",
      ".json",
      ".js",
      ".ts",
      ".jsx",
      ".tsx",
      ".py",
      ".sh",
      ".yml",
      ".yaml",
      ".toml",
      ".lock"
    ],
    "blockedExtensions": [
      ".exe",
      ".bat",
      ".cmd",
      ".scr",
      ".vbs",
      ".ps1",
      ".app",
      ".dmg",
      ".pkg"
    ]
  }
}